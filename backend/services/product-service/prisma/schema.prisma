// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(uuid())
  sku         String  @unique
  name        String
  price       Int
  description String?
  imageUrl    String?

  isAvailable       Boolean   @default(true)
  soldOutUntil      DateTime?
  unavailableReason String?

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  // Associate product to a store (from user-service) by opaque id
  storeId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@index([isAvailable])
  @@index([storeId])
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reservation {
  id      String @id @default(uuid())
  orderId String @unique
  items   Json // Array of { productId, quantity }
  status  String // PENDING, RESERVED, COMMITTED, RELEASED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([status])
}
